<%= render "users/header" %>

<div class="margin-top-51px">
  <div class="container">
    <h2 class="signup-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>




    <% if @user.errors.any? %>
    <div class="error-main" id="error_explanation">
      <% if @user.errors.count == 1 %>
      <h2><%= @user.errors.count %> error prohibited this user from being saved:</h2>
      <% end %>
      <% if 2 <= @user.errors.count %>
      <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
      <% end %>
      <ul class="error-ul">
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>



    <div class="signup-field">
      <%= f.label :name,class: "signup-label" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="signup-field">
      <%= f.label :email,class: "signup-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="signup-field">
      <%= f.label :password,class: "signup-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="signup-field">
      <%= f.label :password_confirmation,class: "signup-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="signup-actions">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div> <!--container-->
</div> <!--signup-body-->


<%= render "users/footer" %>