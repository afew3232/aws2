<%= render "users/header" %>

<div class="margin-top-51px">
	<div class="container">
		<!--notice-->
		<p></p>
		<% if flash[:notice] != nil %>
			<p><%= flash[:notice] %></p>
		<% end %>
		<div class="row">
			<%= render "users/info", user: @user, book: @book %>
			<div class="col-lg-9">
				<h2>Users</h2>


				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
					<% @users.each do |f| %>
						<tr>
							<td>
								<% if f.profile_image_id != nil %> <!--Userの画像がある場合-->
								<!--refileなので profile_imageの_idは抜く-->
								<%= image_tag attachment_url(f, :profile_image, :fill, 50, 50) %>
								<% else %> <!--Userの画像がない場合-->
								<%= image_tag 'no-image.jpg', size: '40x40' %>
								<% end %>
							</td>
							<td><%= f.name %></td>
							<td><%= link_to "Show", user_path(f.id) %></td>
						</tr>
					<% end %>
					</tbody>


				</table>

			</div>
		</div><!--row-->
	</div>
</div>

<%= render "users/footer" %>