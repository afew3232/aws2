<%= render "users/header" %>

<div class="margin-top-51px">
	<div class="container">
		<!--notice-->
		<p></p>
		<% if flash[:notice] != nil %>
			<p><%= flash[:notice] %></p>
		<% end %>
		<div class="row">
			<%= render "users/info", user: @user, book: @book %>

			<div class="col-lg-9">
				<h2>Books</h2>

				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<!--ログイン中のid == Book.user_idだった Bookのデータのみ表示する-->
					<!--@user.id == book.user_id表示する-->
					<tbody>
					<% @books.each do |f| %>
					<% if @user.id == f.user_id %>
						<tr class="tr">
							<td>
								<% if @user.profile_image_id != nil %> <!--Userの画像がある場合-->
								<!--refileなので profile_imageの_idは抜く-->
								<%= image_tag attachment_url(@user, :profile_image, :fill, 50, 50) %>
								<% else %> <!--Userの画像がない場合-->
								<%= image_tag 'no-image.jpg', size: '40x40' %>
								<% end %>
							</td>
							<td><%= link_to f.title, book_path(f.id)  %></td>
							<td><%= f.body %>	</td>
						</tr>
						<% end %>
						<% end %>
					</tbody>

				</table>

			</div>


		</div> <!--row-->
	</div> <!--container-->
</div>

<%= render "users/footer" %>