<%= render "users/header" %>

<div class="margin-top-51px">
	<div class="container">
		<!--notice-->
		<p></p>
		<% if flash[:notice] != nil %>
		<p><%= flash[:notice] %></p>
		<% end %>



		<div class="row">

			<div class="col-lg-6 col-lg-offset-3">
				<h1>Editing Book</h1>

				<!--validation-->
				<% if @book.errors.any? %>
				<div class="error-main" id="error_explanation">
					<% if @book.errors.count == 1 %>
					<h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
					<% end %>
					<% if 2 <= @book.errors.count %>
					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
					<% end %>
					<ul class="error-ul">
						<% @book.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

				
				<%= form_for @book do |f| %>
				<div class="book-edit-field row">
					<label class="book-edit-label">Title</label>
					<%= f.text_field :title, class: "col-lg-12" %>
				</div>
				<div class="book-edit-field row">
					<label class="book-edit-label">Opinion</label>
					<%= f.text_area :body, class: "col-lg-12"%>
				</div>
				<div class="book-edit-actions row">
					<%= f.submit "Update Book",class: "btn btn-primary col-lg-12" %>
				</div>
				<% end %>

				<%= link_to "Show", book_path(@book.id) %>
				<span>|</span>
				<%= link_to "Back", books_path %>
			</div> <!--col-->


			<div class="col-lg-3"></div>
		</div> <!--row-->
	</div> <!--container-->
</div>

<%= render "users/footer" %>